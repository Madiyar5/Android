<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Кнопка для запуска поиска -->

        <!-- Первое изображение и его контент -->

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Введите запрос для поиска"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/searchButton"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.018" />


        <Button
            android:id="@+id/searchButton"
            android:layout_width="102dp"
            android:layout_height="41dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#EFDAB4"
            android:text="Поиск"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="76dp"
            android:src="@drawable/vau_kebab"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/titleTextView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text= "Вау! Кебаб"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView1"
                app:layout_constraintTop_toTopOf="@+id/imageView1"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/descriptionTextView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Кебаб из говядины, соус ранч, моцарелла, сладкий перец, томаты, красный лук, фирменный томатный соус"
            app:layout_constraintEnd_toEndOf="@id/titleTextView1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/titleTextView1"
            app:layout_constraintTop_toBottomOf="@id/titleTextView1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="80dp"
            android:text="от 2900"
            android:textColor="#F4873F"
            android:backgroundTint="#EFDAB4"
            app:layout_constraintEnd_toEndOf="@id/titleTextView1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/titleTextView1"
            app:layout_constraintTop_toBottomOf="@id/titleTextView1" />


        <!-- Второе изображение и его контент -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/pep_grip"
            app:layout_constraintTop_toBottomOf="@+id/imageView1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/titleTextView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Пепперони с грибами"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="@+id/imageView2"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/descriptionTextView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Пикантная пепперони из цыпленка, моцарелла, шампиньоны, фирменный соус альфредо"
            app:layout_constraintEnd_toEndOf="@id/titleTextView2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/titleTextView2"
            app:layout_constraintTop_toBottomOf="@id/titleTextView2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="80dp"
            android:text="от 2900"
            android:textColor="#F4873F"
            android:backgroundTint="#EFDAB4"
            app:layout_constraintEnd_toEndOf="@id/titleTextView2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/titleTextView2"
            app:layout_constraintTop_toBottomOf="@id/titleTextView2" />

        <!-- Можете добавить больше элементов таким же образом -->
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/vet_ogut"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
             />
            <TextView
                android:id="@+id/titleTextView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ветчина и огурчики"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="@+id/imageView3"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/descriptionTextView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Соус ранч, ветчина из цыпленка, моцарелла, маринованные огурчики, красный лук"
                app:layout_constraintEnd_toEndOf="@id/titleTextView3"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@id/titleTextView3"
                app:layout_constraintTop_toBottomOf="@id/titleTextView3" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="80dp"
                android:text="от 2900"
                android:textColor="#F4873F"
                android:backgroundTint="#EFDAB4"
                app:layout_constraintEnd_toEndOf="@id/titleTextView3"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/titleTextView3"
                app:layout_constraintTop_toBottomOf="@id/titleTextView3" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/mixik"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <TextView
                android:id="@+id/titleTextView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Миксик"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="@+id/imageView4"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/descriptionTextView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Пицца четвертинками с ветчиной, цыпленком, томатами, брынзой, моцареллой, фирменным соусом альфредо и набор юного садовода в подарок"
                app:layout_constraintEnd_toEndOf="@id/titleTextView3"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/titleTextView4"
                app:layout_constraintTop_toBottomOf="@id/titleTextView4" />

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="90dp"
                    android:text="от 2900"
                    android:textColor="#F4873F"
                    android:backgroundTint="#EFDAB4"
                    app:layout_constraintEnd_toEndOf="@id/titleTextView4"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@id/titleTextView4"
                    app:layout_constraintTop_toBottomOf="@id/titleTextView4" />
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/cheese"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

            <TextView
                android:id="@+id/titleTextView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ветчина и огурчики"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="@+id/imageView5"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/descriptionTextView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Соус ранч, ветчина из цыпленка, моцарелла, маринованные огурчики, красный лук"
                app:layout_constraintEnd_toEndOf="@id/titleTextView3"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/titleTextView5"
                app:layout_constraintTop_toBottomOf="@id/titleTextView5" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="80dp"
                android:text="от 2900"
                android:textColor="#F4873F"
                android:backgroundTint="#EFDAB4"
                app:layout_constraintEnd_toEndOf="@id/titleTextView5"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/titleTextView5"
                app:layout_constraintTop_toBottomOf="@id/titleTextView5" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>